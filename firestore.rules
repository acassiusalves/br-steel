rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leitura e escrita para a coleção supplies
    match /supplies/{document} {
      allow read, write: if true; // Para desenvolvimento
      // Para produção, você pode adicionar autenticação:
      // allow read, write: if request.auth != null;
    }
    
    // Permite leitura e escrita para a coleção salesOrders
    match /salesOrders/{document} {
      allow read, write: if true; // Para desenvolvimento
    }

    // Permite leitura e escrita para a coleção inventoryMovements
    match /inventoryMovements/{document} {
      allow read, write: if true; // Para desenvolvimento
    }
  }
}
